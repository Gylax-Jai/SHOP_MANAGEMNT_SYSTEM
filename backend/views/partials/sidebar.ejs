</style>

<script>
        // Automatically add 'active' class based on current URL
        document.addEventListener("DOMContentLoaded", function () {
    const currentPath = window.location.pathname;
    const currentHash = window.location.hash;

    document.querySelectorAll('.sidebar ul li').forEach(item => {
        item.classList.remove('active');
    });
    document.querySelectorAll('.sidebar ul li a').forEach(link => {
        const href = link.getAttribute('href');

        // Handle hash links like "#services"
        if (href.startsWith('#') && href === currentHash) {
            link.parentElement.classList.add('active');
        }

        // Handle full path matches like "/dataentry"
        else if (href === currentPath) {
            link.parentElement.classList.add('active');
        }

        // Handle full page matches like "employeeweb.html"
        else if (href.endsWith('.html') && window.location.pathname.endsWith(href)) {
            link.parentElement.classList.add('active');
        }
    });
});

// Manual highlight on click (in case of dynamic routes or JS routing)
document.querySelectorAll('.sidebar ul li a').forEach(link => {
    link.addEventListener('click', function () {
        document.querySelectorAll('.sidebar ul li').forEach(item => {
            item.classList.remove('active');
        });

        this.parentElement.classList.add('active');

        if (window.innerWidth <= 768) {
            document.body.classList.remove('sidebar-open');
        }
    });
});
</script>